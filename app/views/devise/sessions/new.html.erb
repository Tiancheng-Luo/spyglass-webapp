<div class="col-md-10 col-md-offset-1">
<h1>Sign in</h1>
<hr>
<div class="col-md-6 col-md-offset-3">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group"><%= f.label :login %><br />
  <%= f.text_field :login, autofocus: true, class: "form-control" %></div>

  <div class="form-group"><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

  <div class="form-group"><%= f.label :yubiotp, "Yubikey OTP" %><br />
    <%= f.text_field :yubiotp, autocomplete: "off", class: "form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "btn btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
